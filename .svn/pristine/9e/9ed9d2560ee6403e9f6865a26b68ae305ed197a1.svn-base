    }
    
    
    private void btOkActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btOkActionPerformed
                
        if (txDiasf.getText().equals("")){
           
            fmMain.Mensaje("Debe Ingresar una cantidad");
            txDiasf.requestFocus();
            return;
        }
        
        
        if (cbInicio.getSelectedIndex() == 0 || cbTermino.getSelectedIndex() == 0 ){
        
           fmMain.Mensaje("Debe Ingresar un año");
           return;
       
        }
        
    //**************************************************************************//    
        
        int inicio = Integer.parseInt(cbInicio.getSelectedItem().toString());
        int termino = Integer.parseInt(cbTermino.getSelectedItem().toString());
        
        
        if (inicio > termino){
        
            fmMain.Mensaje("El año de inicio debe ser menor que el de término");
            cbInicio.requestFocus();
            return;
        
        }
    //**************************************************************************//    
        
        
        
        dispose();
    }//GEN-LAST:event_btOkActionPerformed

